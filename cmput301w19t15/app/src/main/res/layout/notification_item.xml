<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/NotifType"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Notification Type Here"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/NotifUserEmail"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/NotifType"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="From user"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/NotifBookTitle"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NotifUserEmail"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:text="On Book"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/NotifUnread"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="41dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/NotifType"
            android:layout_toRightOf="@+id/NotifType"
            android:text="UNREAD"
            android:textColor="@android:color/holo_red_light" />

    </RelativeLayout>
</android.support.v7.widget.CardView>